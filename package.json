{
  "name": "codemind",
  "private": true,
  "packageManager": "bun@1.2.2",
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "bun --cwd frontend run dev",
    "build": "bun --cwd frontend run build",
    "lint": "bun --cwd frontend run lint",
    "typecheck": "bun --cwd frontend run typecheck",
    "prisma:generate": "bunx prisma generate",
    "prisma:migrate": "bunx prisma migrate dev"
  },
  "devDependencies": {
    "prisma": "^6.2.1"
  },
  "dependencies": {
    "@prisma/client": "6.19.2"
  }
}
